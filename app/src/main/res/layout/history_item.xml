<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="1dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tanggal">
            <TextView
                android:id="@+id/tanggal_riwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minggu, 10 Desember 2023"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey"/>
        </LinearLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tanggal"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/p1"
            android:id="@+id/imageView_riwayat"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bolen Pisang"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_below="@+id/tanggal"
            android:id="@+id/nama_produk_riwayat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="25dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_below="@+id/nama_produk_riwayat"
            android:id="@+id/qty"/>

        <TextView
            android:id="@+id/qtyx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_toStartOf="@+id/qty"
            android:layout_below="@+id/nama_produk_riwayat"
            android:text="x"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/harga_riwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="68dp"
            android:text="Rp50.000"
            android:textColor="@color/ngudi_rasa"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>